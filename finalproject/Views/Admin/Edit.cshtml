@model finalproject.Models.Admin

@{
    ViewData["Title"] = "Edit";
}
<div class="container">
    <div class="col-md-8">
        <form class="m-form m-form--fit m-form--label-align-right" asp-controller="Admin" asp-action="Update" method="post">
            <div class="form-group m-form__group row">

                <div class="col-10">
                    <input asp-for="ID" class="form-control m-input" hidden>
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label asp-for="Name" class="col-2 col-form-label">
                </label>
                <div class="col-10">
                    <input asp-for="Name" class="form-control m-input">
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label asp-for="CNIC" class="col-2 col-form-label">
                </label>
                <div class="col-10">
                    <input asp-for="CNIC" class="form-control m-input">
                </div>
            </div>
            <div class="form-group m-form__group row">
                <label asp-for="Email" class="col-2 col-form-label">
                </label>
                <div class="col-10">
                    <input asp-for="Email" class="form-control m-input">
                </div>
            </div> <div class="form-group m-form__group row">
                <label  asp-for="Password" class="col-2 col-form-label">
                </label>
                <div class="col-10">
                    <input name="Password" value="@Model.Password" class="form-control m-input">
                </div>
            
            </div> <div class="form-group m-form__group row">
                <label asp-for="Age" class="col-2 col-form-label">
                </label>
                <div class="col-10">
                    <input asp-for="Age" class="form-control m-input">
                </div>
                <div class="m-form__actions">
                   
                    <input type="submit" class="btn btn-primary" value="Update" />
                    <button type="reset" class="btn btn-secondary">
                        Cancel
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


