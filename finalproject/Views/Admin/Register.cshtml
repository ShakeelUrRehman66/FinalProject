@using Microsoft.AspNetCore.Http
@model finalproject.Models.Admin

@{
    ViewData["Title"] = "RegisterUser";
    Layout = "~/Views/Shared/UserLayout/_UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div asp-validation-summary="ModelOnly">

</div>
<div class="m-login__signup" style="display:block">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Sign Up
        </h3>
        <div class="m-login__desc">
            Enter your details to create your account:
        </div>
    </div>
    <form class="m-login__form m-form" asp-controller="Admin" asp-action="Register" method="post" enctype="multipart/form-data">
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Name" placeholder="Enter Name">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="CNIC" placeholder="Enter CNIC">
            <span asp-validation-for="CNIC"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Age" placeholder="Enter Age">
            <span asp-validation-for="Age"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Email" placeholder="Enter Email">
            <span asp-validation-for="Email"></span>
            
            <span>@Context.Session.GetString("EmailUsed")
            </span>


            
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Password" placeholder="Enter Password">
            <span asp-validation-for="Password"></span>
        </div>

        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="ConfirmPassword" type="password" placeholder="Confirm Password">
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input m-login__form-input--last" asp-for="userimage">
        </div>
        <div class="row form-group m-form__group m-login__form-sub">
            <div class="col m--align-left">
                <label class="m-checkbox m-checkbox--focus">
                    <input type="checkbox" name="agree">
                    I Agree the
                    <a href="#" class="m-link m-link--focus">
                        terms and conditions
                    </a>
                    .
                    <span></span>
                </label>
                <span class="m-form__help"></span>
            </div>
        </div>
        <div class="m-login__form-action">
            <input type="submit" value="Sign Up" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" />
            <button id="m_login_signup_cancel" class="btn btn-outline-focus  m-btn m-btn--pill m-btn--custom">
                Cancel
            </button>
        </div>
    </form>
</div>
@section scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

}

