
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/UserLayout/_UserLayout.cshtml";
}
<div class="m-login__forget-password" style="display:block">
    <div class="m-login__head">
        <h3 class="m-login__title">
             Password Recovery ?
        </h3>
        <div class="m-login__desc">
            Enter your New Password and Confirm It To Use:
        </div>
    </div>
    <form class="m-login__form m-form" asp-action="" asp-controller="">
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="New Password" autocomplete="off">
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Confirm Password" autocomplete="off">
        </div>
        <div class="m-login__form-action">
            <input type="submit" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" value="Submit" />


            <button id="m_login_forget_password_cancel" class="btn btn-outline-focus m-btn m-btn--pill m-btn--custom">
                Clear
            </button>
        </div>
    </form>
</div>

