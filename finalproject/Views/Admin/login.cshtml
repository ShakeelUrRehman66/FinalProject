@model finalproject.Models.Admin

@{
    ViewData["Title"] = "login";
    Layout = "~/Views/Shared/UserLayout/_UserLayout.cshtml";
}
@ViewBag.Request
<div class="m-login__signup" style="display:block">
    <div class="m-login__head">
        <h3 class="m-login__title">
            Sign In To Admin
        </h3>
    </div>
    <div asp-validation-summary="ModelOnly"></div>
    <form class="m-login__form m-form" asp-controller="Admin" asp-action="login" method="post">
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Email" placeholder="Enter Email">
            <span asp-validation-for="Email" class="has-danger"></span>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" asp-for="Password" placeholder="Enter Password">
            
        </div>

        <div class="row m-login__form-sub">
            <div class="col m--align-left">
                <label class="m-checkbox m-checkbox--focus">
                    <input type="checkbox" name="remember">
                    Remember me
                    <span></span>
                </label>
            </div>
            <div class="col m--align-right">
                <a  asp-controller="Admin" asp-action="ForgotPassword" class="m-link">
                    Forget Password ?
                </a>
            </div>
        </div>
        <div class="m-login__form-action">
            <input type="submit" value="Sign In" class="btn btn-focus m-btn m-btn--pill m-btn--custom m-btn--air" />
        </div>
    </form>
</div>

