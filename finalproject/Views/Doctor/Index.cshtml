@model IEnumerable<finalproject.Models.Doctor>
@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}

@if (Context.Session.GetString("Role") == "Admin")
{
    <div class="m-content">

        <div class="m-portlet m-portlet--mobile">
            @Html.Partial("dataheader")
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                @Html.Partial("_searchsort")
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <table class="m-datatable" id="html_table" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CNIC)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Age)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Password)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Qualification)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Specialization)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Hospital)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Timings)
                            </th>
                            <th>
                                Actions
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CNIC)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Age)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Password)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Qualification)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Specialization)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hospital)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Timings)
                                </td>
                                <td>
                                    <div class="btn-group m-btn-group m-btn-group--pill m-btn-group--air">
                                        <a asp-action="Edit" asp-route-id="@item.DoctorId" class="m-btn btn btn-brand">Edit</a>
                                        <a class="btn btn-danger Delete">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <!--end: Datatable -->
            </div>
        </div>
    </div>
}
