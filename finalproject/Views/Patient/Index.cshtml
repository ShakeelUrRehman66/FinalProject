@model finalproject.Models.ApplicationViewModel
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Index";
}


@if (Context.Session.GetString("Role") == "Admin") { 
<div class="modal fade" id="create"_modal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Add Patient
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        &times;
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group m-form__group row">
                        <label  class="col-2 col-form-label">
                            Label
                        </label>
                        <div class="col-10">
                            <input  type="text" class="form-control m-input">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-primary">
                    Save changes
                </button>
            </div>
        </div>
    </div>
</div>
@Html.Partial("_messagemodal")


            <div class="m-content">

                <div class="m-portlet m-portlet--mobile">
                   @Html.Partial("dataheader")
                    <div class="m-portlet__body">
                        <!--begin: Search Form -->
                        @Html.Partial("_searchsort")
                        <!--end: Search Form -->
                        <!--begin: Datatable -->
                        <table class="m-datatable" id="html_table" width="100%">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.CNIC)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.Age)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.Email)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.Password)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patient.Disease)
                                    </th>
                                    <th>
                                        Actions
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Patients)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CNIC)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Age)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Password)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Disease)
                                        </td>

                                        <td>
                                            <div class="btn-group m-btn-group m-btn-group--pill m-btn-group--air">
                                                <a asp-action="Edit" asp-route-id="@item.PId" class="m-btn btn btn-brand">Edit</a>
                                                <a asp-action="Delete" asp-route-id="@item.PId" class="btn btn-danger Delete">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!--end: Datatable -->
                    </div>
                </div>
            </div>
}
            <div class="m-content">
                
                <div class="m-portlet m-portlet--mobile">
                   <div>
                       <form class="form-inline">
                           <input type="submit" class="btn btn-success pull-right" value="Appointemnt" />
                       </form>
                   </div>
                    <div class="m-portlet__body">
                       
                    </div>
                </div>
            </div>


